<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.MainMenuFragment">

    <include layout="@layout/toolbar" />

    <Button
        android:id="@+id/main_menu_start_game_button"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:layout_marginBottom="40dp"
        android:text="start game"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/main_menu_exit_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/start_button_background"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/main_menu_exit_button"
        android:layout_width="270dp"
        android:layout_height="120dp"
        android:text="exit"
        android:textSize="35sp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_start_game_button" />

    <Button
        android:id="@+id/main_menu_show_res_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="show results"
        android:background="@drawable/button_background"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"/>


</android.support.constraint.ConstraintLayout>